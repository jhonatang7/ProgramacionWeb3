@{
    Layout = "_layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        .MyComment {
            width: 80%;
            height: 60px;
            border: 1px solid;
            border-radius: 5px;
        }

        .User {
            flex: 1;
            padding: 10px;
        }

        #TextComments {
            height: auto;
            width: 100%;
            margin-top: 5px;
            background-color: white;
            border-color: white;
            resize: none;
        }

        .Image {
            width: 50px;
            margin: 10px;
            border: solid 1px;
            border-radius: 50px;
            height: 50px;
        }

        .CommentsRegisters {
            width: 80%;
            display: flex;
            border: solid 1px;
            border-radius: 10px;
            margin: 10px;
        }

        #btnSendComment {
            text-decoration: none;
            padding: 10px;
            font-weight: 600;
            font-size: 20px;
            color: #ffffff;
            background-color: rgba(200, 31, 83, 0.88);
            border-radius: 6px;
            border: 2px solid rgba(165, 26, 69, 1);
        }

        #btnSendComment:hover {
            background-color: white;
            color: rgba(200, 31, 83, 0.88);
        }

        #ImgUserComment {
            position: center;
            width: 100%;
            height: 100%;
        }

        .InsertComentStyle{
            margin: 10px;
        }

    </style>
</head>
<body>
    <div>
        @RenderPage("_InsertComent.cshtml")
        <br />
        @RenderPage("_ComentsSelect.cshtml")
    </div>
</body>
</html>
