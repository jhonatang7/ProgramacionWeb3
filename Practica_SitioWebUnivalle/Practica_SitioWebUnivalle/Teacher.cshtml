@{
    Layout = "_layout.cshtml";
    var db = Database.Open("connectionstring");
    var query = db.Query("SELECT * FROM teacher");

    var grid = new WebGrid(source: query);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style type="text/css">

        .listCards {
            margin-top: 30px;
            display: flex;
            justify-content: space-evenly;
        }

        .card {
            display: grid;
            grid-template-columns: 300px;
            grid-template-rows: 210px 210px 80px;
            grid-template-areas: "image" "text";
            border-radius: 18px;
            background: white;
            box-shadow: 5px 5px 15px rgba(0,0,0,0.9);
            font-family: roboto;
            text-align: center;
        }

            .card:last-child {
                align-self: center;
            }

        .card-image {
            grid-area: image;
        }

        .card-text {
            grid-area: text;
        }


        #card-image {
            grid-area: image;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            background-size: cover;
            position: center;
            width: 100%;
            height: 100%;
        }

        .card-text {
            grid-area: text;
            margin: 20px;
        }

            .card-text p {
                color: grey;
                font-size: 15px;
                font-weight: 300;
            }

            .card-text h2 {
                margin-top: 0px;
                font-size: 28px;
            }

        .card:hover {
            transform: scale( 1.15 );
            box-shadow: 5px 5px 15px rgba( 0, 0, 0, 0.6 );
        }

        .card {
            transition: 0 .5s ease;
            cursor: pointer;
            margin: 30px;
        }

        #linkComent{
            text-decoration: none;
            color: ghostwhite;
            font-size: 18px;
        }

        .card-info a {
            display: block;
            width: 150px;
            height: auto;
            margin: 15px auto;
            background: #c25117;
            color: #444;
            padding: 3px 10px;
            border-radius: 8px;
            font-size: 0.8em;
            vertical-align: bottom;
        }

            .card-info a:hover {
                background: #8e7c49;
                color: #fff;
            }

                .card-info a:hover span {
                    filter: brightness(10);
                    opacity: 1;
                }

    </style>
</head>
<body>
    <div>
        <div class="listCards">
            @foreach (var row in query)
            {
                <div class="card">
                    <div class="card-image"><img id="card-image" src="~/Images/Teacher/@(row.teacherID).jpg" /></div>
                    <div class="card-text">
                        <h2> @row.name </h2>
                        <p>
                            @row.description
                        </p>
                    </div>
                    <div class="card-info">
                        <a id="linkComent" href="~/ComentPage.cshtml?id=@row.teacherID=teacherID">Ver comentarios </a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
